@model DoAnASP.Areas.Admin.Models.Category
@{
    ViewData["Title"] = "Create";

}

<label class="display_label">@(ViewContext.RouteData.Values["id"] != null ? "Chỉnh sửa loại sản phẩm" : "Thêm loại sản phẩm")</label>
<hr />
<div class="row">

        <form style="width:100%" enctype="multipart/form-data" asp-action="@(ViewContext.RouteData.Values["id"] != null ? "Edit" : "Create")" asp-route-id="@(ViewContext.RouteData.Values["id"] != null ? ViewContext.RouteData.Values["id"] : "")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="IDCategory" />
                }
            }


            <div class="form-group">
                <label asp-for="CategoryName" class="control-label display_label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <input class="custom-file-input ggg" asp-for="Image" type="file" name="ful" id="ful" />
                <label class="custom-file-label" for="ful"> Choose file</label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label display_label">
                    <label>Trạng thái</label>
                    <input class="form-check-input" asp-for="Status" />
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ViewContext.RouteData.Values["id"]!=null ?"Chỉnh sửa":"Tạo mới" )" class="btn btn-outline-primary btn-block" />
            </div>
        </form>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}